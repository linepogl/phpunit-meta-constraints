{
  "name": "linepogl/phpunit-meta-constraints",
  "description": "A PHPUnit extension with advanced constraints.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "phpunit",
    "constraint"
  ],
  "homepage": "https://github.com/linepogl/phpunit-meta-constraints",
  "authors": [
    {
      "name": "Lazare Inepologlou",
      "email": "linepogl@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "PHPUnitMetaConstraints\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPUnitMetaConstraints\\Tests\\": "tst/"
    }
  },
  "require": {
    "php": "^8.4",
    "phpunit/phpunit": "^12.4"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.87"
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit --testsuite=unit",
    "phpunit:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --testsuite=unit --coverage-cobertura=var/cache/.phpunit/cobertura.xml && php dev/coverage.php var/cache/.phpunit/cobertura.xml",
    "cs:fix": "php-cs-fixer fix --show-progress=dots --verbose ",
    "cs:validate": "php-cs-fixer fix --show-progress=none --dry-run --no-interaction --stop-on-violation",
    "phpstan": "phpstan --memory-limit=4G"
  }
}
